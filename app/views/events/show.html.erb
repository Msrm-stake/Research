<div class="max-w-4xl mx-auto bg-white rounded-lg shadow-md p-6 mt-6">
  <h1 class="text-3xl font-bold text-gray-800"><%= @event.event_name %></h1>
  <p class="text-gray-600 mt-4"><%= @event.description %></p>

  <div class="mt-6">
    <p><strong>Date:</strong> <%= @event.date.strftime('%B %d, %Y') %></p>
    <p><strong>Time:</strong> <%= @event.time.strftime('%I:%M %p') %></p>
    <p><strong>Location:</strong> <%= @event.place %></p>
  </div>

  <div class="mt-6">
    <%= link_to 'Back to Events', community_events_path(@community), class: 'text-indigo-500 hover:underline' %>
  </div>
</div>
