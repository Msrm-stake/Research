<h1>New Event</h1>

<%= form_with model: @event, local: true do |f| %>
  <div>
    <%= f.label :name, "Event Name" %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :description, "Description" %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :date, "Event Date" %>
    <%= f.date_field :date %>
  </div>

  <div>
    <%= f.label :time, "Event Time" %>
    <%= f.time_field :time %>
  </div>

  <div>
    <%= f.label :place, "Location" %>
    <%= f.text_field :place %>
  </div>

  <div>
    <%= f.label :photo, "Event Photo" %>
    <%= f.file_field :photo %>
  </div>

  <div>
    <%= f.submit "Create Event" %>
  </div>
<% end %>

<%= link_to "Back to Events", events_path %>
